<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactive</item>
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="itemTextColor">@drawable/bottom_nav_colors</item>
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#414A61</item> <!-- Active color -->
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#BDBDBD</item> <!-- Inactive color -->
    </style>
</resources>